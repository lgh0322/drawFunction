<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <com.vaca.calc.GraphView
       android:id="@+id/graph"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />


   <LinearLayout
       android:id="@+id/topX"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal"
       app:layout_constraintTop_toTopOf="parent">

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:layout_weight="1">

         <TextView
             android:id="@+id/x1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bt_bg"
             android:clickable="true"
             android:focusable="true"
             android:gravity="center"
             android:text="Y="
             android:textColor="@color/YellowGreen"
             android:textSize="20sp" />
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:layout_weight="1">

         <TextView
             android:id="@+id/x2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bt_bg"
             android:clickable="true"
             android:focusable="true"
             android:gravity="center"
             android:text="WINDOW"
             android:textColor="@color/YellowGreen"
             android:textSize="14sp" />
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:layout_weight="1"
          android:visibility="invisible">

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:layout_weight="1">

         <TextView
             android:id="@+id/x4"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bt_bg"
             android:clickable="true"
             android:focusable="true"
             android:gravity="center"
             android:text="GRAPH"
             android:textColor="@color/YellowGreen"
             android:textSize="16sp" />
      </androidx.cardview.widget.CardView>

   </LinearLayout>


   <EditText
       android:id="@+id/func"
       android:layout_width="260dp"
       android:layout_height="50dp"
       android:layout_margin="10dp"
       android:background="@drawable/pr_report_bt_bg"
       android:gravity="center"
       android:inputType="textEmailAddress"
       android:padding="5dp"
       android:textColor="@color/white"
       android:textSize="30sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/topX" />

   <TextView
       android:id="@+id/funcHint"
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:layout_margin="10dp"
       android:gravity="center"
       android:text="= 0"
       android:textColor="@color/black"
       android:textSize="30sp"
       app:layout_constraintStart_toEndOf="@+id/func"
       app:layout_constraintTop_toBottomOf="@+id/topX" />

   <androidx.constraintlayout.widget.Group
       android:id="@+id/group"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:constraint_referenced_ids="func,funcHint" />

   <LinearLayout
       android:id="@+id/windows"
       android:layout_marginTop="70dp"
       app:layout_constraintTop_toBottomOf="@+id/topX"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="150dp">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="75dp">
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
               android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xmin "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/xmin"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
               android:background="@drawable/reset_bg"/>
         </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xmax "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/xmax"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
                android:background="@drawable/reset_bg"/>
         </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xstep "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/xstep"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
                android:background="@drawable/reset_bg"/>
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="75dp">
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ymin "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/ymin"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
                android:background="@drawable/reset_bg"/>
         </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ymax "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/ymax"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
                android:background="@drawable/reset_bg"/>
         </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ystep "
                android:textSize="@dimen/window_hint"/>
            <EditText
                android:id="@+id/ystep"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_width="@dimen/window_input"
                android:layout_height="@dimen/window_input_h"
                android:background="@drawable/reset_bg"/>
         </LinearLayout>
      </LinearLayout>
   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>